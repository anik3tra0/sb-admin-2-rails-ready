<%= devise_error_messages! %>
<%=render 'devise/notification' %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Forgot your password?</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <fieldset>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, class:"form-control",placeholder:"E-mail"%>
                </div>
                <%= f.submit "Send me reset password instructions", class:"btn btn-success btn-block" %>

                <div class="row" style="padding-top: 10px">
                  <div class="col-md-6">
                    <%= link_to "Sign up", new_registration_path(resource_name),class:"btn btn-primary btn-block" %>
                  </div>
                  <div class="col-md-6">
                    <%= link_to "Log in", new_session_path(resource_name),class:"btn btn-info btn-block" %>
                  </div>
                </div>
              </fieldset>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



